<launch>
    <!--无人机飞行中的期望高度-->
    <arg name="desire_z" type="double" value="1.4" />
    <arg name="change" type="double" value="0.02" />
    <arg name="Baudrate" type="int" value="9600" />
    <arg name="throw_serial_port" type="string" value="/dev/arduino" />
    <!--持续向飞控发送点-->
    <node name="send_info_node" pkg="offb" type="send_info_node" output="screen" />
    <!--主要的控制程序-->
    <node name="com_node" pkg="offb" type="com_node" output="screen" launch-prefix="gnome-terminal --window --">
        <param name="desire_z" value="$(arg desire_z)" />
        <param name="change" value="$(arg change)" />
    </node>
    <!--显示无人机的状态以及速度-->
    <node name="monitor_node" pkg="offb" type="monitor_node" output="screen" launch-prefix="gnome-terminal --window --" />
    <!--改变无人机的模式-->
    <node name="set_mode_node" pkg="offb" type="set_mode_node" output="screen" launch-prefix="gnome-terminal --window --" />
    <!--串口输入改变舵机状态-->
    <node name="servo_control_node" pkg="offb" type="servo_control_node" output="screen" launch-prefix="gnome-terminal --window --" />
</launch>
